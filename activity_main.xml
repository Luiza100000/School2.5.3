<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="Фамилия"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="Имя"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="Отчество"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="Год"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="Город"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="Школа"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="Опыт в программировании"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="Знание языка программирования"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
        <EditText
            android:id="@+id/lu"
            android:layout_width="60dp"
            android:layout_height="24dp"/>
        <EditText
            android:id="@+id/lu2"
            android:layout_width="60dp"
            android:layout_below="@+id/lu"
            android:layout_height="24dp"/>
        <EditText
            android:id="@+id/lu3"
            android:layout_width="60dp"
            android:layout_below="@+id/lu2"
            android:layout_height="24dp"/>
        <RadioButton
            android:id="@+id/lu4"
            android:layout_width="24dp"
            android:layout_below="@+id/lu3"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/lu5"
            android:layout_width="24dp"
            android:layout_below="@+id/lu4"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/lu6"
            android:layout_width="wrap_content"
            android:layout_below="@+id/lu5"
            android:layout_height="24dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
